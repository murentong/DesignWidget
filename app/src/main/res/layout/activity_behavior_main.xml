<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tuacy.designwidget.module.MainActivity">

    <android.support.v7.widget.Toolbar
        style="@style/AppTheme.Toolbar"
        android:id="@+id/tool_bar"
        app:title="@string/app_name"
        app:navigationIcon="@drawable/ic_arrow_back_white_24dp"/>

    <Button
        android:id="@+id/button_behavior_bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="CoordinatorLayout"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@+id/tool_bar"/>

    <Button
        android:id="@+id/button_behavior_fab_bottom_in_out"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="FloatingActionButton 从bottom进入从bottom推出"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@+id/button_behavior_bottom_sheet"/>

</android.support.constraint.ConstraintLayout>
